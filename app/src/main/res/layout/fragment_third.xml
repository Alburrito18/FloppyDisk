<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/ColorLeft"
                android:layout_width="303dp"
                android:layout_height="70dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="6dp"
                android:entries="@array/ColourChoices"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="255dp"
                android:layout_height="27dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="108dp"
                android:layout_marginBottom="17dp"
                android:text="@string/nedan_r_de_olika_val_som_kan_g_ras"
                app:layout_constraintBottom_toTopOf="@+id/stringAttachment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="261dp"
                android:layout_height="36dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="102dp"
                android:layout_marginBottom="15dp"
                android:text="@string/hearsafer"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.41000003" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="282dp"
                android:layout_height="41dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="81dp"
                android:layout_marginBottom="5dp"
                android:text="@string/f_rgval_v_nster_sida"
                app:layout_constraintBottom_toTopOf="@+id/ColorLeft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stringAttachment" />

            <Switch
                android:id="@+id/stringAttachment"
                android:layout_width="272dp"
                android:layout_height="30dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="9dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:text="@string/med_f_ste_f_r_sn_re"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Spinner
                android:id="@+id/ColorRight"
                android:layout_width="303dp"
                android:layout_height="70dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="83dp"
                android:entries="@array/ColourChoices"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="282dp"
                android:layout_height="41dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="81dp"
                android:layout_marginBottom="19dp"
                android:text="@string/f_rgval_h_ger_sida"
                app:layout_constraintBottom_toTopOf="@+id/ColorRight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ColorLeft" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="299dp"
                android:layout_height="31dp"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="31dp"
                android:text="@string/val_nedan_inneb_r_extrakostnader"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ColorRight" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="172dp"
                android:layout_height="27dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="192dp"
                android:layout_marginBottom="3dp"
                android:text="@string/concha_telefonsn_cka"
                app:layout_constraintBottom_toTopOf="@+id/Concha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Spinner
                android:id="@+id/Concha"
                android:layout_width="297dp"
                android:layout_height="58dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="65dp"
                android:entries="@array/ConchaChoices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/headsUp"
                android:layout_width="270dp"
                android:layout_height="28dp"
                android:layout_marginStart="300dp"
                android:text="@string/val_markerade_med_inneb_r_extra_kostnad"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ColorRight" />

            <Switch
                android:id="@+id/detect"
                android:layout_width="268dp"
                android:layout_height="46dp"
                android:layout_marginTop="32dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:text="@string/detect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Concha" />

            <Switch
                android:id="@+id/tripleset"
                android:layout_width="268dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:text="@string/trippel_set"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detect" />

            <Spinner
                android:id="@+id/filterChoice"
                android:layout_width="306dp"
                android:layout_height="58dp"
                android:layout_marginStart="293dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="304dp"
                android:entries="@array/filterChoices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripleset" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="100dp"
                android:text="@string/spara"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/filterChoice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout >